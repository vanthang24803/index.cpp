#include<stdio.h>
#include<math.h>
 int main(){
 	printf("Giai he phuong trinh ax^2+bx+c=0 ");
 	float a ,b , c ,x1 ,x2 , delta ;
 	printf("\nNhap he so cua a : ");
 	scanf("%f",&a);
 	printf("\nNhap he so cua b : ");
 	scanf("%f",&b);
 	printf("\nNhap he so cua c : ");
 	scanf("%f",&c);
 	 
 	 if (a==0){
 	 	printf("\nPhuong trinh khong thoa man dieu kien do a=0 ! ");
	  } else{
	  	 delta = pow(b,2) - 4*a*c;
	  	   if (delta>0){
	  	   	 x1=(-b-sqrt(delta))/(2*a);
	  	   	 x2=(-b+sqrt(delta))/(2*a);
	  	   	  printf("\nPhuong trinh co 2 nghiem thoa man x1 = %.2f  , x2 = %.2f", x1 ,x2);
			 } else if(delta==0){
			 	x1=(-b)/(2*a);
			 	 printf("\nPhuong trinh co 1 ngiem kep thoa man x1 = x2 = %.2f", x1);
			 } else {
			 	printf("\nHe phuong trinh vo nghiem");
			 }
	  	
	  	
	  	
	  	
	  }
 	
 	
 	
 }
